{
  "extends": "@pandazy/mole-scripts/lib/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~logic/*": ["src/logic/*"],
      "~nodejs/*": ["src/nodejs/*"],
      "~string/*": ["src/string/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*", "./dist/**/*"]
}
