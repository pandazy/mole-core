{
  "name": "@pandazy/mole-core",
  "version": "2.1.1",
  "description": "A fundamental utility library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@pandazy/eslint-config-mole": "^0.1.3",
    "@pandazy/mole-config": "^0.1.10",
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.10.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "tslib": "2.5.0",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "test": "jest --coverage",
    "build": "rm -rf dist && tsc --build tsconfig.build.json",
    "clean": "rm -rf coverage",
    "test:clear-cache": " jest --clearCache",
    "prepare": "husky install",
    "test:prepare": "yarn lint && yarn clean && yarn test:clear-cache",
    "test:new": "yarn test:prepare && yarn test",
    "lint": "prettier --write src/*.ts src/**/*.ts && yarn eslint 'src/**' --ext .ts,.tsx --fix",
    "release": " yarn build && yarn lint && yarn clean && yarn test && yarn publish && git clean -fd"
  },
  "keywords": [
    "TypeScript",
    "Utility",
    "Functional"
  ],
  "author": "Martin Zheng",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pandazy/mole-core.git"
  },
  "bugs": {
    "url": "https://github.com/pandazy/mole-core/issues"
  },
  "homepage": "https://github.com/pandazy/mole-core#readme",
  "moleOn": true,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ],
    "**/*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
