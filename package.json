{
  "name": "@pandazy/mole-core",
  "version": "1.0.15",
  "description": "A fundamental utility library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@pandazy/eslint-config-mole": "0.1.0",
    "@pandazy/mole-config": "0.1.5",
    "@types/jest": "29.4.0",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.53.0",
    "eslint": "8.34.0",
    "jest": "29.4.3",
    "ts-jest": "29.0.5",
    "tslib": "2.5.0",
    "typescript": "4.9.5"
  },
  "scripts": {
    "build": "yarn clean && tsc --build tsconfig.build.json",
    "clean": "rm -rf dist && rm -rf coverage",
    "test:clear-cache": " jest --clearCache",
    "prepare": "yarn build",
    "test": "yarn lint && yarn clean && yarn test:clear-cache && jest --watchAll --coverage",
    "lint": "yarn eslint 'src/**' --ext .ts",
    "release": "yarn lint && jest && yarn publish && git clean -fd"
  },
  "keywords": [
    "TypeScript",
    "Utility",
    "Functional"
  ],
  "author": "Martin Zheng",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pandazy/mole-core.git"
  },
  "bugs": {
    "url": "https://github.com/pandazy/mole-core/issues"
  },
  "homepage": "https://github.com/pandazy/mole-core#readme",
  "jest": {
    "preset": "@pandazy/mole-config"
  },
  "moleOn": true
}
